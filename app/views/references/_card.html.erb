<%# Reference card partial - displays a single reference with OG metadata preview %>
<%# locals: reference %>

<li class="reference-card" data-reference-id="<%= reference.id %>">
  <div class="reference-card__content">
    <% if reference.og_image.present? %>
      <div class="reference-card__image">
        <img src="<%= reference.og_image %>" alt="" loading="lazy" onerror="this.style.display='none'">
      </div>
    <% end %>

    <div class="reference-card__details">
      <div class="reference-card__header">
        <% if reference.favicon_url.present? %>
          <img src="<%= reference.favicon_url %>" alt="" class="reference-card__favicon" width="16" height="16" loading="lazy" onerror="this.style.display='none'">
        <% end %>
        <span class="reference-card__domain"><%= reference.domain %></span>
      </div>

      <h4 class="reference-card__title">
        <a href="<%= reference.url %>" target="_blank" rel="noopener noreferrer">
          <%= reference.display_title || reference.url %>
        </a>
      </h4>

      <% if reference.display_description.present? %>
        <p class="reference-card__description"><%= truncate(reference.display_description, length: 120) %></p>
      <% end %>

      <% if reference.extracted_content.present? %>
        <details class="reference-card__excerpt">
          <summary class="txt-small">View extracted content</summary>
          <p class="txt-small"><%= truncate(reference.extracted_content, length: 300) %></p>
        </details>
      <% end %>
    </div>
  </div>

  <div class="reference-card__actions">
    <button type="button"
            class="reference-card__btn"
            data-action="references#copyMarkdownLink"
            data-markdown="<%= reference.to_markdown_link %>"
            title="Copy as Markdown link">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" width="16" height="16">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 0 1 1.242 7.244l-4.5 4.5a4.5 4.5 0 0 1-6.364-6.364l1.757-1.757m13.35-.622 1.757-1.757a4.5 4.5 0 0 0-6.364-6.364l-4.5 4.5a4.5 4.5 0 0 0 1.242 7.244" />
      </svg>
      <span class="for-screen-reader">Copy Markdown link</span>
    </button>

    <button type="button"
            class="reference-card__btn"
            data-action="references#copyUrl"
            data-url="<%= reference.url %>"
            title="Copy URL">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" width="16" height="16">
        <path stroke-linecap="round" stroke-linejoin="round" d="M15.666 3.888A2.25 2.25 0 0 0 13.5 2.25h-3c-1.03 0-1.9.693-2.166 1.638m7.332 0c.055.194.084.4.084.612v0a.75.75 0 0 1-.75.75H9a.75.75 0 0 1-.75-.75v0c0-.212.03-.418.084-.612m7.332 0c.646.049 1.288.11 1.927.184 1.1.128 1.907 1.077 1.907 2.185V19.5a2.25 2.25 0 0 1-2.25 2.25H6.75A2.25 2.25 0 0 1 4.5 19.5V6.257c0-1.108.806-2.057 1.907-2.185a48.208 48.208 0 0 1 1.927-.184" />
      </svg>
      <span class="for-screen-reader">Copy URL</span>
    </button>

    <a href="<%= reference.url %>"
       target="_blank"
       rel="noopener noreferrer"
       class="reference-card__btn"
       title="Open in new tab">
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" width="16" height="16">
        <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 0 0 3 8.25v10.5A2.25 2.25 0 0 0 5.25 21h10.5A2.25 2.25 0 0 0 18 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
      </svg>
      <span class="for-screen-reader">Open in new tab</span>
    </a>
  </div>
</li>
