<% cache [ section, section.report, section.report.editable? ] do %>
  <%= section_item_tag(section) do %>
    <span class="btn btn--link arrangement__handle txt-small">
      <%= image_tag "handle.svg", aria: { hidden: true }, size: 24 %>
      <span class="for-screen-reader">Move <%= section.title %></span>
    </span>

    <%= render "sections/delete", section: section %>

    <div class="toc__thumbnail <%= "toc__thumbnail--dark" if section.section&.theme == "dark" %>">
      <% if section.report.editable? %>
        <%= link_to edit_sectionable_path(section), class: "toc__link hide_from_reading_mode", data: { turbo_frame: "_top" } do %>
          <span class="for-screen-reader">Edit <%= section.title %></span>
        <% end %>

        <%= link_to sectionable_slug_path(section), class: "toc__link hide_from_edit_mode", data: { turbo_frame: "_top" } do %>
          <span class="for-screen-reader">Open <%= section.title %></span>
        <% end %>
      <% else %>
        <%= link_to sectionable_slug_path(section), class: "toc__link", data: { turbo_frame: "_top" } do %>
          <span class="for-screen-reader">Open <%= section.title %></span>
        <% end %>
      <% end %>

      <%= tag.span(simple_format(section.section.body), class: "txt-align-center") if section.section? %>

      <%= sanitize_content section.page.html_preview if section.page? %>

      <% if section.picture? %>
        <%= image_tag section.sectionable.image.attached? ? section.sectionable.image.variant(:large) : "default-picture.webp" %>
      <% end %>
    </div>

    <% if section.report.editable? %>
      <%= link_to edit_sectionable_path(section), class: "toc__title min-width hide_from_reading_mode", data: { turbo_frame: "_top" } do %>
        <span class="overflow-ellipsis"><%= section.title %></span>
      <% end %>

      <%= link_to sectionable_slug_path(section), class: "toc__title min-width hide_from_edit_mode", data: { turbo_frame: "_top" } do %>
        <span class="overflow-ellipsis"><%= section.title %></span>
      <% end %>
    <% else %>
      <%= link_to sectionable_slug_path(section), class: "toc__title min-width", data: { turbo_frame: "_top" } do %>
        <span class="overflow-ellipsis"><%= section.title %></span>
      <% end %>
    <% end %>

    <span class="toc__bookmark">
      <svg viewBox="0 0 64 64" width="64px" height="64px" xmlns="http://www.w3.org/2000/svg">
        <path d="m17.01 54.01v-42.98.00000045c-.00000025-1.65685 1.34315-3 3-3h24-.00000013c1.65685-.00000007 3 1.34315 3 3v42.98.0001206c0 1.10457-.895431 2-2 2-.34994 0-.693756-.0918173-.997105-.266281l-11.5039-6.61564c-.308638-.17748-.688362-.17748-.997 0l-11.5046 6.6153.00000011-.00000006c-.957413.550849-2.1801.221264-2.73095-.736149-.174564-.303405-.266442-.647312-.266451-.997351z" fill-rule="evenodd" fill="var(--color-marker)" />
      </svg>
    </span>

    <small class="toc__wordcount txt-small--responsive">
      <% if section.page? %>
        <%= word_count(section.sectionable.body.content) %>
      <% end %>
    </small>
  <% end %>
<% end %>
