<% content_for(:title) { "Edit #{@report.title}" } %>

<% content_for :header do %>
  <nav>
    <%= link_to report_slug_path(@report), class: "btn flex-item-justify-start" do %>
      <%= image_tag "arrow-left.svg", aria: { hidden: true }, size: 24 %>
      <span class="for-screen-reader">Cancel and go back</span>
    <% end %>
  </nav>
<% end %>

<%= render "reports/form", report: @report, users: @users, creating_user: nil %>

<% content_for :footer do %>
  <nav class="flex align-end justify-center pad">
    <%= button_to report_path(@report), method: :delete, class: "btn btn--negative",
          data: { turbo_confirm: "Are you sure you want to delete this report? It cannot be undone." } do %>
      <%= image_tag "trash.svg", aria: { hidden: true }, size: 24 %>
      <span class="for-screen-reader">Delete <%= @report.title %></span>
    <% end %>
    <button type="submit" form="report-editor", class="new-report-btn btn btn--reversed center txt-medium--responsive" aria-label="Save changes" title="Save changes">
      <%= image_tag "check.svg", aria: { hidden: true }, size: 24 %>
    </button>
  </nav>
<% end %>
