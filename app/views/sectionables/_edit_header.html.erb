<nav>
  <%= render "sections/sidebar_toggle" %>

  <%= link_to_previous_sectionable(section, hotkey: false, for_edit: true) %>

  <div class="breadcrumbs">
    <%= render "reports/index_link" %>
    <span class="flex-item-no-shrink">▸</span>
    <%= link_to report.title, report_slug_path(report) %>
    <span class="flex-item-no-shrink">▸</span>
    <%= form_with model: [ report, section ], url: sectionable_path(section), class: "flex align-center gap-half", format: :html do |form| %>
      <strong class="min-width"><%= form.text_field :title, form: "sectionable-editor", class: "input full-width", autocomplete: "off" %></strong>
    <% end %>
  </div>

  <button class="btn" data-action="fullscreen#toggle" data-fullscreen-target="button">
    <%= image_tag "expand.svg", aria: { hidden: true }, size: 24 %>
    <span class="for-screen-reader">Enter fullscreen</span>
  </button>

  <%= render "reports/searches/search", report: @report %>
</nav>
