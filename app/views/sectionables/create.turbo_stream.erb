<% if params[:position].present? %>
  <%= turbo_stream.replace :dragged_item, partial: "sections/edit", locals: { section: @section } %>
<% else %>
  <%= turbo_stream.append :sections, partial: "sections/edit", locals: { section: @section } %>
<% end %>

<%= turbo_stream.scroll_into_view @section, animation: :wiggle %>
